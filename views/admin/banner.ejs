<%- include('../partials/admin-header'); %>

    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin">
                <div class="col-10 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Add Banners</h4>
                            <form class="forms-sample" action="/admin/addbanner" method="post"
                                enctype="multipart/form-data">
                                <div class="form-group">
                                    <label for="exampleInputName1">Name</label>
                                    <input type="text" name="name" class="form-control" id="exampleInputName1"
                                        placeholder="Name">
                                </div>
                                <div class="form-group">
                                    <label for="bannerImage" class="form-label">Image</label>
                                    <input type="file" name="bannerImage" class="form-control" id="bannerImage"
                                        multiple>
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputName1">URL</label>
                                    <input type="text" name="url" class="form-control" id="exa mpleInputName1"
                                        placeholder="URL">
                                </div>
                                <div class="form-group">
                                    <label for="exampleTextarea1">Description</label>
                                    <textarea class="form-control" name="description" id="exampleTextarea1"
                                        rows="4"></textarea>
                                </div>
                                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                                <!-- <button class="btn btn-light">Cancel</button> -->
                            </form>
                        </div>
                    </div>
                </div>
                <div class="card mt-5">
                    <div class="card-body">
                        <h4 class="card-title">Banner List</h4>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Image</th>
                                        <th>Name</th>
                                        <th>Description</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% banner.forEach((result)=> { %>
                                        <tr>
                                            <td class="py-1">
                                                <img src="/bannerImages/<%= result.image[0] %>" alt="image" />
                                            </td>
                                            <td>
                                                <%= result.name %>
                                            </td>
                                            <td>
                                                <%= result.description %>
                                            </td>
                                            <td>
                                                <% if(result.access === true) { %>
                                                        <a href="/admin/bannerStatus/<%= result._id %>"
                                                            class="btn btn-danger">Hide</a>
                                                        <% }else{ %>
                                                            <a href="/admin/bannerStatus/<%= result._id %>"
                                                                class="btn btn-success">Unhide</a>
                                                            <% } %>
                                            </td>
                                        </tr>
                                        <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/admin-footer'); %>