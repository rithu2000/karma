<%- include('../partials/admin-header'); %>

  <div class="col-10 grid-margin stretch-card">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">Add Coupons</h4>
        <form class="forms-sample" action="/admin/addCoupon" method="post">
          <div class="form-group">
            <label for="exampleInputName1">Coupon Name</label>
            <input type="text" name="name" class="form-control" id="exampleInputName1" placeholder="Name" required>
          </div>
          <div class="form-group">
            <label for="exampleInputEmail3">Coupon Code</label>
            <input type="text" name="couponCode" class="form-control" id="exampleInputEmail3" placeholder="Code" required>
          </div>
          <div class="form-group">
            <label for="exampleInputPassword4">Discount</label>
            <input type="number" name="discount" class="form-control" id="exampleInputPassword4" placeholder="Discount" required>
          </div>
          <div class="form-group">
            <label for="exampleInputPassword4">Max Limit</label>
            <input type="number" name="maxlimit" class="form-control" id="exampleInputPassword4" placeholder="coupon limit" required>
          </div>
          <div class="form-group">
            <label for="exampleInputCity1">Expiry Date</label>
            <input type="date" name="expDate" class="form-control" id="exampleInputCity1" placeholder="Date" required>
          </div>
          <button type="submit" class="btn btn-primary mr-2">Submit</button>
        </form>
      </div>
    </div>
  </div>

  <%- include('../partials/admin-footer'); %>